@page "/tasks/add"
@attribute [Authorize]

<PageTitle>Add new task</PageTitle>

<div class="col-md-6 offset-md-3 mt-5">
    <div class="card">
        <h4 class="card-header">Create new task</h4>
        <div class="card-body">
            <EditForm Model="Model" OnValidSubmit="Create">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label>Name</label>
                    <InputText id="name" class="form-control" @bind-Value="Model.Name" />
                    <ValidationMessage For="@(() => Model.Name)" />
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <InputText id="supplier" class="form-control" @bind-Value="Model.Description" />
                    <ValidationMessage For="@(() => Model.Description)" />
                </div>
                <br />
                <InputFile OnChange="@HandleSelected" />
                <button class="btn btn-success">
                    Create
                </button>

                <a class="btn btn-primary" href="/tasks">
                    Go back
                </a>

                @if (showError)
                {
                    @foreach (var err in errorMessages)
                    {
                        <div class="alert alert-danger mt-3 mb-0">@err</div>
                    }
                }
            </EditForm>
        </div>
    </div>
</div>

