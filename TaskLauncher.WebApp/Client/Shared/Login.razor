<AuthorizeView>
    <Authorized>
        <a href="profile">@context.User.Claims.FirstOrDefault(i => i.Type == "name").Value</a>
        <a class="btn btn-primary" href="auth/logout">Sign out</a>
    </Authorized>
    <NotAuthorized>
        <a href="auth/login">Sign in</a>
    </NotAuthorized>
</AuthorizeView>
